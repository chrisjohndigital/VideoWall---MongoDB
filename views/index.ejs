<!DOCTYPE html>
<html>
  <head>
    <% include partials/template/head.ejs %>
  </head>
  <body>
      <div class="container">
          <div class="page-header">
              <h1>VideoWall</h1>
          </div>
          <% if (walls.length>0) {%>
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h2 class="panel-title">Available Walls</h2>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        <% for(var i=0; i<walls.length; i++) {%>
                            <li class="list-group-item">
                                <button data-toggle="collapse" data-target="#<%= walls[i].id %>" class="btn btn-warning pull-right"><span class="glyphicon glyphicon-trash"></span></button>
                                <a href="/wall?id=<%= walls[i].id %>&name=<%= walls[i].name %>" class="btn btn-success"><%= walls[i].name %></a>
                                <div id="<%= walls[i].id %>" class="collapse">
                                    <div class="panel panel-danger">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">Are you sure you want to delete this wall?</h3>
                                        </div>
                                        <div class="panel-body">
                                            <a href="/removewall?id=<%= walls[i].id %>" class="btn btn-danger">Yes</a>
                                            <button data-toggle="collapse" data-target="#<%= walls[i].id %>" class="btn btn-success">No</button>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        <% } %>
        <% include partials/content/form_new_wall.ejs %>  
      <% include partials/template/foot.ejs %>  
      </div>
  </body>
</html>